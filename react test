// 1.0 In einer Komponente, die einen Div-Container erzeugt, soll ein Text Deiner Wahl stehen. Innerhalb dieses Textes soll ein span-Element sein.
// Dieses span-Element soll bei Klick ein Alert-Fenster öffnen, das den Inhalt des span-Elementes anzeigt.
// 1.1 Wie oben, aber die Komponente soll einen Counter enthalten. Dieser wird bei Klick hochgezählt und der Zählerstand soll im Button angezeigt werden.
// 1.2
// Wie oben, aber bei jedem Klick soll ein neues DOM-Element eingehängt werden.
// 1.3
// Erzeuge eine Komponente, in der in jeder Sekunde ein neues p-tag angelegt wird.
// In diesen p-Tags steht eine laufende Nummer.

function App() {
    const [geklickt, setGeklickt] = useState(0);
    const [items, setItems] = useState([]);



    function klickMich() {
        setGeklickt(geklickt + 1);
         alert("Ich sagte doch nicht klicken")
        addItem()

    }
    function addItem() {
        setItems([...items, `Du hast geklickt`]);
    }

/*setInterval(() => {
    setItems([...items, "Hey ein neues Element wurde erzeugt"]);
    }, 1000);
*/
    return (
        <>
        <p>Du solltest auf keinen Fall <span onClick={klickMich}> Hier </span> Klicken</p>
        <p className={"box"}>{geklickt}</p>
            <ul>
                {items.map((item, index) => (
                    <li key={index}>{item}</li>
                ))}
            </ul>
        </>

    )

}


export default App
