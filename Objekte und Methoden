// 1.0 Erstelle eine Klasse, die Objekte für Kinofilme anlegt.
// Jedes Objekt soll die folgenden Informationen enthalten:
//
//
//     Filmtitel
//
//     Regisseur
//
//     Laufzeit in Minuten
//
//     Erscheinungsjahr
//
//
// Verwende diesen Konstruktor, um 4 Filme Deiner Wahl als Objekt anzulegen.
// 1.1 Erweitere die Klasse durch eine Methode, die das aktuelle Alter des Filmes per return liefert
// 1.2 Erweitere die Klasse für Kinofilme um ein Attribut, das den Cast enthält.

const   jetzt = new Date(),
    aktuellesJahr = jetzt.getFullYear();

class film {
    constructor(Filmtitel, Regisseuer, Laufzeit, Erscheinungsjahr, cast) {
        this.Filmtitel = Filmtitel;
        this.Regisseuer = Regisseuer;
        this.Laufzeit = Laufzeit;
        this.Erscheinungsjahr = Erscheinungsjahr;
        this.cast = [];


    }
    get Alter () {
        return~~(aktuellesJahr - this.Erscheinungsjahr);
    }


}
class cast {
    constructor(Charakter, Name, Synchro) {
        this.Charakter = Charakter;
        this.Name = Name;
        this.Synchro = Synchro;
    }
}


const KinoFilme = new film("Chihiros Reise ins Zauberland", "Hayao Miyazaki", 125, 2001)

const FilmListe = [
    new film("Chihiros Reise ins Zauberland", "Hayao Miyazaki", 125, 2001),
    new film("Alien", "Ridley Scott", 117, 1979),
    new film("Scott Pilgrim", "Edgar Wright", 112, 2010),
    new film("Your Name", "Makoto Shinkai", 107, 2016),

];


FilmListe[0].cast.push(
    new cast("Chihiro/Sen", 	"Rumi Hiiragi", 	"Sidonie von Krosigk" 	),
    new cast("Haku", 	"Miyu Irino", 	"Tim Sander" 	),
    new cast("Yubaba/Zeniba", 	"Mari Natsuki", 	"Nina Hagen" ),
    new cast("Lin", 	"Yumi Tamai", 	"Cosma Shiva Hagen"),
);
FilmListe[1].cast.push(
    new cast("Ellen Louise Ripley", 	"Sigourney Weaver", 	"Helgard Bruckhaus"),
    new cast("Cpt. Arthur Dallas Coblenz", 	"Tom Skerritt", 	"Sigmar Solbach"),
    new cast("Ash", 	"Ian Holm", 	"Mogens von Gadow"),
    new cast("Samuel Elias Brett", 	"Harry Dean Stanton",	"Friedrich Georg Beckhaus"),
);
FilmListe[2].cast.push(
    new cast("Scott W. Pilgrim", 	"Michael Cera", 	"Nicolás Artajo"),
    new cast("Ramona Victoria Flowers", 	"Mary Elizabeth Winstead", 	"Maria Koschny"),
    new cast("Wallace Wells", 	"Kieran Culkin", 	"Constantin von Jascheroff"),
