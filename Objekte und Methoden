//FilmListe[1].cast.push()

const body = document.querySelector("section");
const style = document.createElement("style");
style.textContent = `
    .film {
        background-color: lightgrey;
        padding: 10px 10px 0;
        border-radius: 8px;
        margin: 10px auto 0;
        width: 800px;
} 
    .jahr {
     text-align: left;
     }
     h2 {
     margin: 10px 0 0
     }
`;

document.head.appendChild(style);
for (let i = 0; i < FilmListe.length; i++) {
    const container = document.createElement("div");
    body.appendChild(container);
    container.classList.add("film");

    const Filmname = document.createElement("h2");
    container.appendChild(Filmname);
    Filmname.innerHTML = FilmListe[i].Filmtitel;

    const flex =document.createElement("div");
    flex.style.display = "flex";
    flex.style.gap = "20px";
    container.appendChild(flex);


    const Regie = document.createElement("p");
    flex.appendChild(Regie);
    Regie.style.fontWeight = "bold";
    Regie.innerHTML = FilmListe[i].Regisseuer;

    const Jahr = document.createElement("p");
    flex.appendChild(Jahr);
    Jahr.classList.add("jahr");
    Jahr.innerHTML = FilmListe[i].Erscheinungsjahr;

    const Laufzeit = document.createElement("p");
    container.appendChild(Laufzeit);
    Laufzeit.innerHTML = "Dauer: " + FilmListe[i].Laufzeit + " Minuten";

    const castflex = document.createElement("div");
    container.appendChild(castflex);
    castflex.style.display = "flex";
    castflex.style.justifyContent = "space-between";

    const castChar = document.createElement("p");
    castflex.appendChild(castChar);
    castChar.style.fontWeight = "bold";
    castChar.innerText = "Charakter";

    const castSchau = document.createElement("p");
    castflex.appendChild(castSchau);
    castSchau.style.fontWeight = "bold";
    castSchau.innerText= "Schauspieler";

    const castSynch = document.createElement("p");
    castflex.appendChild(castSynch);
    castSynch.style.fontWeight = "bold";
    castSynch.innerText = "Synchronsprecher";

    for (let j = 0; j < FilmListe[i].cast.length; j++) {
        const neueZeile = document.createElement("div");
        container.appendChild(neueZeile);
        neueZeile.style.display = "flex";
        neueZeile.style.justifyContent = "space-between";

        const Char = document.createElement("p");
        neueZeile.appendChild(Char);
        Char.innerText = FilmListe[i].cast[j].Charakter;

        const Schau = document.createElement("p");
        neueZeile.appendChild(Schau);
        Schau.innerText = FilmListe[i].cast[j].Name;

        const Synch = document.createElement("p");
        neueZeile.appendChild(Synch);
        Synch.innerText = FilmListe[i].cast[j].Synchro;
    }



}
